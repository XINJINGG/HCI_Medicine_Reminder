<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MedicineTrackerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:paddingBottom="24dp">

    <ImageView
        android:id="@+id/MTImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/MTName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Medicine Name"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/MTImage"
        app:layout_constraintTop_toTopOf="@+id/MTImage" />

    <TextView
        android:id="@+id/MTLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Singapore General Hospital"
        app:layout_constraintStart_toStartOf="@+id/MTName"
        app:layout_constraintTop_toBottomOf="@+id/MTName" />

    <TextView
        android:id="@+id/MTLeftWith"
        android:layout_width="75dp"
        android:layout_height="15dp"
        android:layout_marginStart="12dp"
        android:text="Left with 10 pills"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/MTImage"
        app:layout_constraintStart_toEndOf="@+id/MTLocation"
        app:layout_constraintTop_toBottomOf="@+id/MTLocation"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>