<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/medicationSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Label for medication selection -->
        <TextView
            android:id="@+id/tvSelectMedication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT MEDICATION:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Container for the medication details and dropdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/edit_text_border"
            android:gravity="center_vertical">

            <!-- Placeholder for the medication image -->
            <ImageView
                android:id="@+id/ivMedicineImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/coughsyrup" />

            <!-- Texts for medication details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMedicineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dosage"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequency"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Dropdown arrow (icon) -->
            <ImageView
                android:id="@+id/ivDropdownArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_keyboard_arrow_down_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewEditAlarmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alarm Name:"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextEditAlarmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/edit_text_border"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>